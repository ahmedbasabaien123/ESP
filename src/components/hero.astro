---
const link = "/Contact";
import Image from "astro/components/Image.astro";

const mainText = "Security Information and Event Management";
const secondaryText = "Surveillez, détectez, réagissez, protégez !";
---

<head>
  <link rel="preload" href="/ESP/heroimg.webp" as="image" />
</head>

<section class="relative h-[70vh] w-full" style="z-index: 1;">
  <Image
    data-testid="hero-img"
    src="/ESP/heroimg.webp"
    alt="hero"
    loading="eager"
    class="absolute inset-0 h-full w-full object-cover"
    width={1920}
    height={1080}
  />
  <div
    class="relative z-[60] flex h-full flex-col items-center justify-center text-gray-100"
  >
    <h1
      data-testid="hero-text"
      transition:name="heroTxt"
      class="pb-10 pt-20 text-center text-6xl font-bold drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)] md:text-8xl"
    >
      {mainText}
    </h1>
    <h2
      data-testid="intro-text"
      transition:name="introTxt"
      class="pb-6 text-center text-2xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)] md:text-4xl"
    >
      {secondaryText}
    </h2>
    
    <div class="relative" style="z-index: 100;">
      <a 
        href="https://www.youtube.com/watch?v=zOeSSP9GJcs"
        target="_blank"
        rel="noopener noreferrer"
        class="group relative inline-flex items-center justify-center overflow-hidden rounded-lg bg-red-600 px-6 py-3 font-bold text-white shadow-2xl transition-all hover:bg-red-700"
        style="z-index: 100; position: relative;"
      >
        <span class="relative">Regarder la vidéo</span>
      </a>
    </div>
  </div>
</section>

<style>
  section {
    position: relative;
    isolation: isolate;
  }
  
  .relative {
    position: relative;
  }
</style>
