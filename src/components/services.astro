---
import Image from "astro/components/Image.astro";

// adjust these variable to change your content
const subtitle1 = "Ahmed BASABAIEN";
const subtitle2 = "Adrien CASTELLOTE";
const subtitle3 = "Maxime SARRAZIN";

const mission1 = "Développement UI/UX";
const mission2 = "Administrateur sécurité";
const mission3 = "Administrateur système";
---

<section
  class="mx-auto mt-20 flex max-w-[80%] flex-col items-center rounded-lg border-y-8 border-blue-400 bg-neutral-950 px-10 py-20 text-center text-gray-100 shadow-lg dark:bg-neutral-900 dark:text-gray-200"
>
  <h1 id="team" class="mb-16 text-4xl font-bold">Notre Équipe</h1>
  
  <div class="flex flex-col items-center justify-between gap-20 lg:flex-row lg:gap-32">
    <div  class="h-96 w-64 overflow-hidden px-4">
      <!--Update the src to the name of the image uploaded to the public folder -->
    <Image
      src="/ahmed.png"
      alt="example service"
      loading="eager"
      width={160}
      height={160}
      class="mx-auto rounded-full dark:shadow-lg sm:h-48 sm:w-48 md:h-56 md:w-56 lg:h-56 lg:w-56"
    />
    <p class="text-lg">{subtitle1}</p>
        <p class="text-sm text-gray-300 mt-2">{mission1}</p>

  </div>
  <div class="h-96 w-64 overflow-hidden px-4">
    <!--Update the src to the name of the image uploaded to the public folder -->
    <Image
      src="/adrien.png"
      alt="example service"
      loading="eager"
      width={160}
      height={160}
      class="mx-auto rounded-full dark:shadow-lg sm:h-48 sm:w-48 md:h-56 md:w-56 lg:h-56 lg:w-56"
    />
    <p class="text-lg">{subtitle2}</p>
        <p class="text-sm text-gray-300 mt-2">{mission2}</p>

  </div>
  <div class="h-96 w-64 overflow-hidden px-4">
    <!--Update the src to the name of the image uploaded to the public folder -->
    <Image
      src="/ESP/maxime.png"
      alt="example service"
      loading="eager"
      width={160}
      height={160}
      class="mx-auto rounded-full dark:shadow-lg sm:h-48 sm:w-48 md:h-56 md:w-56 lg:h-56 lg:w-56"
    />
    <p class="text-lg">{subtitle3}</p>
        <p class="text-sm text-gray-300 mt-2">{mission3}</p>

  </div>
</section>
